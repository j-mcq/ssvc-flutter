rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{document} {
      allow create: if request.auth.uid == document;
      allow read: if request.auth.uid == document;
      allow write: if request.auth.uid == document;
      allow delete: if false;
    }

    match /response_items/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /scenario/{document} {
      allow create: if request.auth != null;
      allow read: if /databases/$(database)/documents/users/$(request.auth.uid) in resource.data.owners;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /stock_depot_mapping/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /psr/{document} {
      allow create: if request.auth != null;
      allow read: if /databases/$(database)/documents/users/$(request.auth.uid) in resource.data.owners;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /psr/{parent}/psr_categories/{document} {
      allow create: if request.auth != null;
      allow read: if /databases/$(database)/documents/users/$(request.auth.uid) in get(/databases/$(database)/documents/psr/$(parent)).data.owners;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /psr_category_options/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /psr_category_group_options/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /scenario/{parent}/polygon_points/{document} {
      allow create: if request.auth != null;
      allow read: if /databases/$(database)/documents/users/$(request.auth.uid) in get(/databases/$(database)/documents/scenario/$(parent)).data.owners;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /scenario/{parent}/circles/{document} {
      allow create: if request.auth != null;
      allow read: if /databases/$(database)/documents/users/$(request.auth.uid) in get(/databases/$(database)/documents/scenario/$(parent)).data.owners;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /scenario/{parent}/scenario_results/{document} {
      allow create: if request.auth != null;
      allow read: if /databases/$(database)/documents/users/$(request.auth.uid) in get(/databases/$(database)/documents/scenario/$(parent)).data.owners;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /scenario/{parent}/scenario_household_responses/{document} {
      allow create: if request.auth != null;
      allow read: if /databases/$(database)/documents/users/$(request.auth.uid) in get(/databases/$(database)/documents/scenario/$(parent)).data.owners;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /scenario/{parent}/scenario_response_items/{document} {
      allow create: if request.auth != null;
      allow read: if /databases/$(database)/documents/users/$(request.auth.uid) in get(/databases/$(database)/documents/scenario/$(parent)).data.owners;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /depots/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /active_response_items/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /response_item_status_options/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /depot_owners/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
  }
}
